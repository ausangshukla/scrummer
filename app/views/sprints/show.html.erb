<div class="">
	<legend>
		Sprint <%= @sprint.iteration %> : <%= @sprint.project.name %>
	</legend>
	<table class="table table-bordered">

		<tr>
			<td>Iteration:</td>
			<td><%= @sprint.iteration %></td>
			<td>Rag status:</td>
			<td><%= @sprint.rag_status %></td>
			<td>Project:</td>
			<td><%= link_to @sprint.project.name, @sprint.project  %></td>
			
			<td>Start date:</td>
			<td><%= @sprint.start_date %></td>
			<td>End date:</td>
			<td><%= @sprint.end_date %></td>
			
			  <td>Planned Hours:</td>
			  <td><%= @sprint.planned_hours %></td>
			  <td>Actual Hours:</td>
			  <td><%= @sprint.actual_hours %></td>
			
		</tr>

		<tr>
			<td>Notes:</td>
			<td colspan="14"><%= @sprint.notes %></td>
		</tr>

	</table>
</div>

<%= render partial: "/sprints/burnout_chart", 
	locals: { 	title: @sprint.project.name, 
				sub_title: "Sprint: #{@sprint.iteration}" ,
				days: @sprint.days,
				remaining_days: @sprint.remaining_days.values  } %>
				
<%= render partial: "/sprints/tabs" %>