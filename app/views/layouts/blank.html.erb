

<!DOCTYPE html>
<html lang="en">
	<head>
		<%= render partial:"/layouts/includes"%>
	</head>
	<body>
		
		<div id="content_blank">
			<% flash.each do |name, msg| %>
              <% name = name == :notice ? "success" : "error" %>
              <div class="alert alert-<%=name%>">
                <%= msg.html_safe if msg %>
              </div>
            <% end %>
            
          	<div class="clearfix"> 
				<%= yield %>
			</div>
			<!-- Popups -->
          	<%= render :partial=>'/layouts/alert' %>
            <%= render :partial=>'/layouts/confirm' %>
          
		</div>
		
		<div id="footer">
			2009 - 2014 &copy; Funding Gates
		</div>
		            
	</body>
</html>