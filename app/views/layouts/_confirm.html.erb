  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3 id="title" class="red_text">Confirm</h3>
  </div>
  
  <div id=message class="modal-body"></div>
  
  <div class="modal-footer">
    <button id="confirmOKBtn" class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Ok</button>
    <button id="confirmCancelBtn" class="btn btn-danger" data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>
  
</div>