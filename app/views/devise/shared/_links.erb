<%
	resource_name ||= "user"
%>
<div id="devise_links" class="hero-unit2">
	<%- if controller_name != 'sessions' && request.path != "/" %>
	<%= link_to "Sign in", new_session_path(resource_name) , :class=>"" %>
	<% end -%>

	<%- if controller_name != 'registrations' %>
	<%= link_to "Sign up", new_registration_path(resource_name) , :class=>" hidden"%>
	<% end -%>

	<%- if controller_name != 'passwords' && controller_name != 'registrations' %>
	<%= link_to "Forgot Password", new_password_path(resource_name), :class=>"" %>
	<% end -%>

	<%- if controller_name != 'confirmations' %>
	<%= link_to "Resend Confirmation Instructions", new_confirmation_path(resource_name), :class=>"" %>
	<% end -%>

</div>
