
<div class="">

	<legend>Feature</legend>	
	<table class="table table-striped table-bordered">
		
			
	<tr>
	  <td>Summary:</td>
	  <td><%= @feature.summary %></td>
	  <td>Assigned to:</td>
	  <td><%= @feature.user.full_name if @feature.user  %></td>
	</tr>

	
			
	<tr>
	  <td>Details:</td>
	  <td colspan="3"><%= @feature.details %></td>
	</tr>
	
			
	<tr>
	  <td>Acceptance criteria:</td>
	  <td colspan="3"><%= @feature.acceptance_criteria %></td>
	</tr>
	
			
	<tr>
	  <td>Project:</td>
	  <td><%= link_to @feature.project.name, @feature.project %></td>
	  <td>Sprint:</td>
	  <td><%= link_to @feature.sprint.iteration, @feature.sprint if @feature.sprint  %></td>
	</tr>
	
			
	<tr>
	  <td>Status:</td>
	  <td><%= @feature.status %></td>
	  <td>Priority:</td>
	  <td><%= @feature.priority %></td>
	</tr>
	
			
	<tr>
	  <td>Points:</td>
	  <td><%= @feature.points %></td>
	  <td>Classification:</td>
	  <td><%= @feature.classification %></td>
	</tr>
	
	
	<tr>
	  <td>Planned Hours:</td>
	  <td><%= @feature.planned_hours %></td>
	  <td>Actual Hours:</td>
	  <td><%= @feature.actual_hours %></td>
	</tr>
	
			
	
		
	</table>
</div>

<div id="tasks_view">
	<%= render partial: "/tasks/index", locals: {tasks:current_user.tasks.where(feature_id:@feature.id), project: @feature.project, feature:@feature} %>
</div>