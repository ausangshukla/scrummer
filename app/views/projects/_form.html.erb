<div class="span7">
<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs form-horizontal"">
    <%= f.input :name %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :status, :collection=>Project::RAG_STATUSES %>
  </div>

  <div class="form-actions">
    <%= f.submit "Save", :class=>"btn btn-primary" %>
  </div>
<% end %>
</div>