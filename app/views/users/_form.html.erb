<div class="span7">
<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  

  <div class="form-inputs form-horizontal"">
    <%= render :partial=>"/users/user_fields", :locals=>{f:f} %>
  </div>

  <div class="form-actions">
    <%= f.submit "Save", :class=>"btn btn-primary" %>
  </div>
<% end %>
</div>