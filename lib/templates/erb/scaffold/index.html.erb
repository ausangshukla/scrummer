<legend><%= plural_table_name.humanize %></legend>

<table class="table row-click table-bordered">
  <thead>
    <tr>
<% attributes.reject(&:password_digest?).each do |attribute| -%>
      <th><%= attribute.human_name %></th>
<% end -%>
      <th class="action_col"></th>
    </tr>
  </thead>

  <tbody>
    <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
      <tr>
<% attributes.reject(&:password_digest?).each do |attribute| -%>
        <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
<% end -%>
        <td class="center">
        	<%% if can?(:manage, <%= singular_table_name %>) %>
        	<%%= link_to 'Show', <%= singular_table_name %> , :class=>"btn btn-mini btn-primary"%>
        	<%%= link_to 'Edit', edit_<%= singular_table_name %>_path(<%= singular_table_name %>), :class=>"btn btn-mini btn-primary" %>
        	<%%= link_to 'Delete', <%= singular_table_name %>, method: :delete, data: { confirm: 'Are you sure?' } , :class=>"btn btn-mini btn-danger"%>
        	<%% end %>
        </td>
      </tr>
    <%% end %>
  </tbody>
</table>
